<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.TextField?>
<VBox fx:controller="ru.geekbrains.sklyarov.network.chat.client.Controller"
      xmlns:fx="http://javafx.com/fxml" alignment="center" >
    <TextArea fx:id="msgArea" VBox.vgrow="ALWAYS" editable="false"/>
    <HBox>
        <TextField fx:id="msgField" HBox.hgrow="ALWAYS" promptText="Type message..." onAction="#sendMsg"/>
        <Button text="Send" onAction="#sendMsg"/>
    </HBox>
</VBox>